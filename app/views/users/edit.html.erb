<%= error_messages_for 'user' %>

<%= form_tag :action => 'update', :id => @user do %>
	<%= render :partial => "form" %>

	<%= submit_tag _("Save"), :class => 'nolabel' %>
<% end %>

<% if current_user.admin? %>
	<fieldset class="basic">
		<legend><%=_ 'Project access control' %></legend>
		<div id="permission_list"><%= render :partial => "project_permissions" %></div>
	</fieldset>
<% end %>

<%= render :partial => "/pages/notes", :locals =>{ :notes=> @user.notes} %>
